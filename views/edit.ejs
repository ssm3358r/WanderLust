<% layout("/layout/boilerplate.ejs")-%>

<body>

    <div class="row ">
        <div class="col-12 col-md-10 col-lg-8 offset-md-1 offset-lg-2">
 <form enctype="multipart/form-data" novalidate class="needs-validation" method="post" action="/listings/<%=listing._id%>?_method=PUT">

        <div class="mb-3">
            <label for="title" class="form-label">Title</label>
        <input required id="title"  class="form-control border border-dark" type="text" name="listing[title]" placeholder="enter title" value="<%=listing.title%>">
    <div class="valid-feedback">title looks good</div>    
    </div>

        <div class="mb-3">
            <label class="form-label" for="description">Description</label>
    <textarea required   class="form-control border border-dark" name="listing[description]" rows="2" cols="30"> <%=listing.description%></textarea>
<div class="invalid-feedback">Please enter short description</div></div>

    <div class="mb-3"> original Image
        <br>
    <img  src="<%=originalImageurl%>" alt="NO image" class="img-fluid" style="max-width: 200px; max-height: 200px; width: 100%; height: auto;"> 
</div>
    <div class="mb-3"> <label class="form-label" for="ImageUrl">Upload Image</label>
    <input    class="form-control border border-dark"id="ImageUrl" type="file"  name="listing[image][url]"  value="<%=listing.image.url%>"> 
</div>

<!-- <div class="mb-3"> <label class="form-label" for="ImageUrl">Image/URL</label>
    <input    class="form-control border border-dark"id="ImageUrl" type="text"  name="listing[image][url]"  value="<%=listing.image.url%>">
</div> -->

    <div class="row">
        <div class="mb-3 col-md-4">
            <label class="form-label" for="price">Price</label>
    <input  required class="form-control border border-dark" id="price"  name="listing[price]"  value="<%=listing.price%>" placeholder="enter price">
        <div class="invalid-feedback">enter valid price</div>
    
</div>
        <div class="mb-3 col-md-8"><Label class="form-label" for="location">Location</Label>
    <input required  class="form-control border border-dark"  id="location" type="text" name="listing[location]"  value="<%=listing.location%>" placeholder="enter location">
        <div class="invalid-feedback">entervalid location name</div>
</div>
    
</div>
        
        <div class="mb-3"> 
            <label class="form-label" for="country">Country</label>
    <input required  class="form-control border border-dark" type="text" name="listing[country]"  value="<%=listing.country%>" placeholder="enter country name">
            <div class="invalid-feedback">entervalid country name</div>

</div>
    

    
    <button class="btn btn-danger">submit</button>
    </form>
        </div>
    </div>
    <br>
    
</body>
